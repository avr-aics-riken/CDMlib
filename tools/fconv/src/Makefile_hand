include ../make_setting

TARGET   = fconv

CXXSRCS = \
    main.C \
    InputParam.C \
    conv.C \
    convMx1.C \
    convMxM.C \
    convMxN.C \
    convOutput.C \
    convOutput_SPH.C \
    convOutput_AVS.C \
    convOutput_BOV.C \
    convOutput_VTK.C \
    convOutput_PLOT3D.C


F90SRCS =

SRCS  = $(CXXSRCS) $(F90SRCS)

.SUFFIXES: .o .C .f90 
CXXOBJS = $(CXXSRCS:.C=.o)
F90OBJS = $(F90SRCS:.f90=.o)
OBJS = $(CXXOBJS) $(F90OBJS)

$(TARGET):$(OBJS)
	$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -o $(TARGET) $(OBJS) \
	$(LDFLAGS) $(UDEF_LIB_PATH) $(LIBS) $(UDEF_LIBS)
	mv $(TARGET) $(CDM_DIR)/bin

.C.o:
	$(CXX) $(CXXFLAGS) $(UDEF_OPT) $(UDEF_INC_PATH) -c $<

.f90.o:
	$(F90) $(F90FLAGS) -o $@ -c $<

clean:
	$(RM) $(OBJS) $(TARGET)

depend: $(OBJS:.o=.C)
	@ rm -rf depend.inc
	@ for i in $^; do\
		$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -MM $$i >> depend.inc;\
	done

#-include depend.inc

